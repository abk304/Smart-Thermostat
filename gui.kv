    MDFloatLayout:
        orientation: "vertical"
        size: self.parent.size
        pos: self.parent.pos
        md_bg_color: 40/255,4/255,112/255,1
        
    #MDScreen:
            
        MDLabel:
            text: "Room Temperature"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            font_style: 'H2'
            bold: True
            halign: "center"
            #valign: "top"
            pos_hint:{'center_y':dp(0.9)}
            
