            id: roomTemperature
            text: "-"
            theme_text_color:"Custom"
            text_color: 1, 1, 1, 1
            font_style: 'H3'
            halign: "center"
            pos_hint:{'center_y': dp(0.7)}
            
            
            
        MDIconButton:
            icon: "up arrow.png"
            size_hint: dp(0.125*16/9),dp(0.125)
            pos_hint: {'center_x': dp(0.5),'center_y': dp(0.375)}
            on_release:root.incTemp()
            
        MDIconButton:
            icon: "down arrow.png"
            size_hint: dp(0.125*16/9),dp(0.125)
            pos_hint: {'center_x': dp(0.5),'center_y': dp(0.125)}
            on_release:root.decTemp()
