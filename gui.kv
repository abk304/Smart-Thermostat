        MDLabel:
            id: setTemperature
            text: "11Â°C"
            theme_text_color:"Custom"
            text_color: 1, 0, 0, 1
            font_style: 'H3'
            bold: True
            pos_hint: {'center_x':dp(0.9), 'center_y':dp(0.25)}
            
            #canvas.before:
